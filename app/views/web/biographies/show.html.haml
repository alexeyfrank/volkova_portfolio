#bio-gallery
  .scroll-pane.ui-widget.ui-widget-header.ui-corner-all.new-gallery
    .scroll-bar-wrap-wrap
      = image_tag ('left-arrow.png'), size: "22x22", id: 'bio-left-arrow', class: 'arrow arrow-left'
      = image_tag ('right-arrow.png'), size: "22x22", id: 'bio-right-arrow', class: 'arrow arrow-right'
      .scroll-bar-wrap.ui-widget-content.ui-corner-bottom
        .scroll-bar
    .scroll-content
      .scroll-content-item.ui-widget-header
        .big-bio
          .image
            %img{src: @bio.photo_url, height: '450'}
          .info
            = @bio.content.html_safe
