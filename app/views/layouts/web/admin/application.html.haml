!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Панель администратора"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "admin", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")

  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Панель администратора", admin_root_path, class: :brand
          .nav-collapse
            %ul.nav
              %li= link_to "Пользователи", admin_users_path
              %li= link_to "Страницы", admin_pages_path
              -#%li= link_to "Менеджеры", admin_managers_path
              -#%li= link_to "Клиенты", admin_clients_path
              %li= link_to "Обратная связь", admin_questions_path

          %ul.nav.pull-right.nav-collapse
            %li.divider-vertical
            %li.dropdown
              %a.dropdown-toggle(href="#" data-toggle="dropdown")
                = current_user.email
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Профиль", edit_admin_user_path(current_user)
                %li= link_to "Выход", session_path, method: :delete
    .container
      .row
        .span9
          = bootstrap_flash
          = yield
        .span3
          .well.sidebar-nav
            %h3 Меню
            %ul.nav.nav-list
              %li= link_to "На сайт", root_path
              %li= link_to "Пользователи", admin_users_path
              %li= link_to "Страницы", admin_pages_path
              %li= link_to "Обратная связь", admin_questions_path

      %br
      %br
      %br
      %footer
        %p &copy; Alexey Frank 2013

    = javascript_include_tag "admin"
