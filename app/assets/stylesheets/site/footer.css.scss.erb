.footer {
  margin-top: 10px;
  min-height: 255px;
  background-color: #8b1919;
  border-bottom: 2px solid #ffffff;

  h3, h4 {
    font-size: 14px;
    font-weight: normal;
    font-family: 'Open Sans';
    color: #ffffff;
  }

  h3 {
    text-transform: uppercase;
  }

  .question-form {
    input {
      /*width: 260px;*/
    }
    textarea {
      height: 122px;
    }
  }

  .info {
    border-left: 2px solid #ffffff;
    padding-top: 15px;
    padding-left: 15px;

    .brand {
        display: block;
        width: 151px;
        height: 48px;
        background-image: url(<%= asset_path('logo-footer.png') %>);
    }

    p {
        font-family: 'Open Sans';
        color: #fbf6f6;
        margin-top: 13px;
        margin-bottom: 0;
        &:last-child {
            margin-bottom: 10px;
        }
    }
  }
}